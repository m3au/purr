class Purr < Formula
  desc "${DESCRIPTION}"
  homepage "${HOMEPAGE}"
  url "${HOMEPAGE}/releases/download/v${VERSION}/purr-${VERSION}.tar.gz"
  sha256 "${SHA256}"
  license "${LICENSE}"

  head "#{homepage}.git"

  depends_on "go-md2man" => :build
  depends_on "shellcheck" => :build
  depends_on "shfmt" => :build

  def install
    system "make", "install", "PREFIX=#{prefix}"
  end

  test do
    system "#{bin}/purr", "--version"
  end
end
