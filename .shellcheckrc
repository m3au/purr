# Shell dialect
shell=sh

# Enable external source following
external-sources=true
source-path=src/lib

# Enable optional checks
enable=require-variable-braces
enable=quote-safe-variables
enable=avoid-nullary-conditions

# Exclude docs folder
exclude=docs/*

# Other useful options (commented out)
# disable=SC2034  # Unused variables
# disable=SC2154  # Referenced but not assigned
# disable=SC2086  # Double quote to prevent globbing
# disable=SC2016  # Single quotes prevent expansion

# Severity settings
# severity=style
# severity=warning

# Format options
# format=gcc
# format=tty

# External sources
# external-sources=true
